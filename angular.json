{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "dev-app": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "tc",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "aot": true,
                        "outputPath": "dist",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "styles": [
                            "node_modules/tippy.js/dist/tippy.css",
                            "node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
                            "node_modules/bootstrap/dist/css/bootstrap.css",
                            "node_modules/@plentymarkets/terra-icons/dist/style.css",
                            "src/styles.scss"
                        ],
                        "scripts": [],
                        "vendorChunk": true
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "dev-app:build",
                        "port": 3001
                    }
                }
            }
        },
        "lib": {
            "root": "src/lib",
            "sourceRoot": "src/lib",
            "projectType": "library",
            "prefix": "tc",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "src/lib/tsconfig.lib.json",
                        "project": "src/lib/package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "src/lib/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "tsConfig": "src/lib/tsconfig.spec.json",
                        "karmaConfig": "./karma.conf.js",
                        "fileReplacements": [
                            {
                                "replace": "src/lib/environments/environment.ts",
                                "with": "src/lib/environments/environment.test.ts"
                            }
                        ],
                        "codeCoverageExclude": ["**/example/**", "**/testing/**"]
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": ["src/lib/tsconfig.lib.json"],
                        "exclude": ["**/node_modules/**", "src/lib/environments/**"]
                    }
                }
            }
        }
    },
    "defaultProject": "lib"
}
