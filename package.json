{
    "scripts": {
        "start": "ng serve",
        "build": "ng build lib && gulp compileStyles && npm run build:schematics && gulp copy",
        "build:lib": "ng build lib",
        "build:dev-app": "ng build dev-app --aot",
        "build:schematics": "cd src/lib && npm run build",
        "test": "ng test lib",
        "test-once": "ng test lib --watch=false --browsers=Chrome,Firefox,Safari",
        "test-headless": "ng test lib --watch=false --browsers=ChromeHeadless,FirefoxHeadless",
        "test-headless-coverage": "ng test lib --watch=false --codeCoverage --browsers=ChromeHeadless",
        "badge:coverage": "npm run test-headless-coverage && gulp updateCoverageBadge",
        "lint": "ng lint lib",
        "prettier": "prettier --check .",
        "reinstall": "npm ci",
        "prepare-release": "npm run reinstall && npm run build && npm run test-once && npm start"
    },
    "prettier": "@plentymarkets/terra-prettier-config",
    "dependencies": {
        "bootstrap": "^4.4.1",
