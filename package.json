        "angular-l10n": "^11.0.0",
        "ckeditor4-angular": "^1.0.1",
        "codelyzer": "^6.0.1",
        "del": "^6.0.0",
        "gulp": "^4.0.2",
        "gulp-sass": "^4.1.0",
        "husky": "^4.2.5",
